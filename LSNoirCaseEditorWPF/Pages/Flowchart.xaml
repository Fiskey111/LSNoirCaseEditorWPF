<Page
    x:Class="LSNoirCaseEditorWPF.Pages.Flowchart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="MyScrollViewer">
            <Image x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="1920" Height="995" Source="/Assets/LS Noir Case Diagram.png" />
        </ScrollViewer>
    </Grid>
</Page>
