<Window x:Class="LSNoirCaseEditorWPF.Windows.LoadingBarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LSNoirCaseEditorWPF.Windows"
      mc:Ignorable="d"
      Title="LoadingBarPage" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Loading Case..." VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Margin="10,10,10,10" IsIndeterminate="True" />
    </Grid>
</Window>
