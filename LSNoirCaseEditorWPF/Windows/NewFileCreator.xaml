<Window x:Class="LSNoirCaseEditorWPF.Windows.NewFileCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSNoirCaseEditorWPF.Windows"
        mc:Ignorable="d"
        Title="New File Creator">
    <Grid Margin="10,10,10,10">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="New Case Name"/>
                <TextBox x:Name="fileName" HorizontalAlignment="Stretch" MinWidth="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10">
                <Button Content="Create" x:Name="Create" MinWidth="100" Margin="10,10" Click="Create_Click"/>
                <Button Content="Close" x:Name="Cancel" MinWidth="100" Margin="10,10" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
